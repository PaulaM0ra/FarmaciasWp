<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".MainMenuActivity">

    <!-- Título del menú -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Menú Farmacias WP"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />
    <!-- ImageView para la imagen -->


    <!-- Botón para la base de datos -->

    <!-- Botón para mapas -->

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="76dp"
        android:contentDescription="Logo de Farmacias WP"
        android:src="@drawable/farmacia2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDatabase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#1E88E5"
        android:text="Ir a la BD"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir Mapas"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#42A5F5"
        app:layout_constraintTop_toBottomOf="@id/btnDatabase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botón para el catálogo -->
    <Button
        android:id="@+id/btnCatalog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Catálogo"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#64B5F6"
        app:layout_constraintTop_toBottomOf="@id/btnMaps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botón para registrar clientes -->
    <Button
        android:id="@+id/btnRegisterClient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Cliente"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#90CAF9"
        app:layout_constraintTop_toBottomOf="@id/btnCatalog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestión eficiente para tus farmacias"
        android:textSize="14sp"
        android:textColor="#1565C0"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnRegisterClient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
