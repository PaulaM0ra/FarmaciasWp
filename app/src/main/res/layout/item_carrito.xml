<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nombre del producto -->
    <TextView
        android:id="@+id/txtNombreComercial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Producto"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgProducto"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <!-- Presentación del producto -->
    <TextView
        android:id="@+id/txtPresentacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Presentación"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtNombreComercial"
        app:layout_constraintStart_toStartOf="@id/txtNombreComercial"
        app:layout_constraintEnd_toEndOf="@id/txtNombreComercial" />

    <!-- Valor del producto -->
    <TextView
        android:id="@+id/txtValor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Valor"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtPresentacion"
        app:layout_constraintStart_toStartOf="@id/txtPresentacion"
        app:layout_constraintEnd_toEndOf="@id/txtPresentacion" />

    <!-- Botón para eliminar el producto -->
    <Button
        android:id="@+id/buttonEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:backgroundTint="@color/button_blue"
        app:layout_constraintTop_toBottomOf="@id/txtValor"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
