<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity"
    android:background="@color/white">


    <TextView
        android:id="@+id/page_title"
        android:layout_width="396dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:background="@color/button_blue"
        android:foregroundTint="@color/button_text_white"
        android:gravity="center"
        android:text="Lista de productos"
        android:textColor="@color/button_text_white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/button_blue"
        android:foregroundTint="@color/white"
        android:iconifiedByDefault="false"
        android:queryHint="Buscar medicamento"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/carrpc"
        android:text="@string/hint_Next"
        android:textColorLink="@color/button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/button_blue"
        app:strokeColor="@color/button_blue" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagen del medicamento -->
        <ImageView
            android:id="@+id/medicamento_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="Imagen del medicamento" />

        <!-- Informaci칩n del medicamento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/medicamento_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Medicamento"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medicamento_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripci칩n breve"
                android:textColor="#7A7A7A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/medicamento_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$Precio"
                android:textColor="#1E3A58"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Bot칩n de agregar al carrito -->
        <Button
            android:id="@+id/add_to_cart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_blue"
            android:text="A침adir"
            android:textColor="#FFFFFF"
            android:textColorLink="@color/button_blue" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
